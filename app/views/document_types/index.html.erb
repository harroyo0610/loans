<br><br><br>
<h1 class="text-center">Tipo de documentos</h1>
<br><br><br>
<%= link_to 'Nuevo', new_document_type_path, class: 'btn btn-primary offset-md-10 col-md-2' %>
<br><br>
<table id="dttb" class="table table-hover">
      <thead>
        <tr>
          <th>Nombre</th>
          <th>Activo</th>
          <th>Obligatorio</th>
          <th>Editar</th>
          <th>Eliminar</th>
        </tr>
      </thead>
      <tbody>
        <% @document_types.each do |document| %>
          <tr>
            <td><%= link_to document.name.capitalize, edit_document_type_path(document) %></td>
            <td>
              <% if document.active %>
                <%= fa_icon 'check-circle', class: "fa-2x text-success" %>
              <% else %>
                <%= '' %>
              <% end %>
            </td>
            <td>
              <% if document.required %>
                <%= fa_icon 'check-circle', class: "fa-2x text-success" %>
              <% else %>
                <%= '' %>
              <% end %>
            </td>
            <td><%= link_to 'Editar', edit_document_type_path(document), class: 'btn  btn-sm btn-outline-warning' %></td>
            <td><%= link_to 'Eliminar', document_type_path(document), class: 'btn btn-sm btn-outline-danger', method: :delete, data: { confirm: 'EstÃ¡s seguro?' }  %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

<script>
  $(document).ready(function() {
    $("#dttb").dataTable({
        dom: 'Bfrtip',
        buttons: [
            'copy', 'csv', 'excel', 'pdf', 'print'
        ]
    });
  });
</script>
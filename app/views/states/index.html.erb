<br><br><br>
<h1 class="text-center">Estados</h1>
<br><br><br>
<%= link_to 'Nuevo', new_state_path, class: 'btn btn-primary offset-md-10 col-md-2' %>
<br><br>
<table id="dttb" class="table table-hover">
      <thead>
        <tr>
          <th>Nombre</th>
          <th>Activo</th>
          <th>Editar</th>
          <th>Eliminar</th>
        </tr>
      </thead>
      <tbody>
        <% @states.each do |s| %>
          <tr>
            <td><%= link_to s.state_name, edit_state_path(s) %></td>
            <td>
              <% if s.active %>
                <%= fa_icon 'check-circle', class: "fa-2x text-success" %>
              <% else %>
                <%= '' %>
              <% end %>
            </td>
            <td><%= link_to 'Editar', edit_state_path(s), class: 'btn  btn-sm btn-outline-warning' %></td>
            <td><%= link_to 'Eliminar', state_path(s), class: 'btn btn-sm btn-outline-danger', method: :delete, data: { confirm: 'EstÃ¡s seguro?' }  %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

<script>
  $(document).ready(function() {
    $("#dttb").dataTable({
        dom: 'Bfrtip',
        buttons: [
            'copy', 'csv', 'excel', 'pdf', 'print'
        ]
    });
  });
</script>
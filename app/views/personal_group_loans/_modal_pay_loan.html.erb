<div class="modal " id="showSaldoModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Saldar Préstamo</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close" id="button_modal_close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <h4 class="text-center">
          Para saldar este préstamo el grupo debe pagar:
        </h4>

        <%= form_with url: "/pay_full_pg_loan", method: :post, local: true  do |form| %>
          <div class="form-group">
          <%= form.hidden_field :id, value: loan.id %>
          <%= form.text_field :finished_amount, value: last_weekly_payment.round(2), class: 'form-control' %>
          </div>
          <%= form.submit "Saldar", data: { confirm: 'Estás seguro?. Este cambio es irreversible' }, class: 'btn btn-outline-danger col-md-2' %>
          <button type="button" class="btn btn-outline-primary" data-dismiss="modal">Cerrar</button>
        <% end %>
      </div>
    </div>
  </div>
</div>

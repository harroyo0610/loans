<div class="container">
  <br><br><br>
  <h1 class="text-center">Préstamos <%= if @filter == 'active' then 'Activos' elsif @filter == 'pending' then 'Pendientes' elsif @filter == 'finished' then 'Finalizados' else @filter end %></h1>
  <br><br><br>
  <%= link_to 'Nuevo', new_loan_path, class: 'btn btn-primary offset-md-10 col-md-2' %>
  <br><br>
  <table id="dttb" class="table table-hover table-responsive dt-responsive nowrap w-100">
    <thead>
      <tr>
        <th>Fecha</th>
        <th>Nombre</th>
        <th>Monto</th>
        <th>Monto Semanal</th>
        <th>Inicio</th>
        <th>Finaliza</th>
        <th>Ciclo</th>
        <th>Editar</th>
        <th>Eliminar</th>
      </tr>
    </thead>
    <tbody>
      <% @loans.each do |c| %>
        <tr>
          <td><span><%= c.created_at&.in_time_zone('Mexico City')&.strftime("%Y%m%d%r") %></span> <%= c.created_at&.in_time_zone('Mexico City')&.strftime("%d/%m/%Y %r") %></td>
          <td><%= link_to c.name.capitalize, edit_loan_path(c) %></td>
          <td><%= number_to_currency(c.loan_amount, precision: 2) %></td>
          <td><%= number_to_currency(c.weekly_amount, precision: 2) %></td>
          <td><%= c.start_date&.in_time_zone('Mexico City')&.strftime("%d/%m/%Y") %></td>
          <td><%= c.end_date&.in_time_zone('Mexico City')&.strftime("%d/%m/%Y") %></td>
          <td><%= c.cycle %></td>
          <td><%= link_to 'Editar', edit_loan_path(c), class: 'btn  btn-sm btn-outline-warning' %></td>
          <td><%= link_to 'Eliminar', loan_path(c, filter: @filter), class: 'btn btn-sm btn-outline-danger', method: :delete, data: { confirm: 'Estás seguro?' }  %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<style>
  #dttb span {
    display:none; 
}
</style>

<script>
  $(document).ready(function() {
    $("#dttb").dataTable({
        dom: 'Bfrtip',
        paging: false,
        order: [[ 0, "desc" ]],
        buttons: [
            'copy', 'csv', 'excel', 'pdf', 'print'
        ],
        "language": {
            "lengthMenu": "Mostrando _MENU_ renglones por página",
            "zeroRecords": "No hay nada - disculpa",
            "info": "",
            "infoEmpty": "No hay datos disponibles",
            "infoFiltered": "(filtered from _MAX_ total de renglones)",
            "sSearch": "Buscar:",
            "oPaginate": {
              "sFirst":    "Primero",
              "sPrevious": "Anterior",
              "sNext":     "Siguiente",
              "sLast":     "Último"
            },
            "buttons": {
                "copy": "Copiar",
                "print": "Imprimir"
            }
        }
    });
  });
</script>
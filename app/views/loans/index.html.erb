<div class="container">
  <br><br><br>
  <h1 class="text-center">Préstamos <%= if @filter == 'active' then 'Activos' elsif @filter == 'finished' then 'Finalizados' else @filter end %></h1>
  <br><br><br>
  <%= link_to 'Nuevo', new_loan_path, class: 'btn btn-primary offset-md-10 col-md-2' %>
  <br><br>
  <table id="dttb" class="table table-hover dt-responsive nowrap w-100">
    <thead>
      <tr>
        <th>Fecha</th>
        <th>Nombre</th>
        <th>Editar</th>
        <th>Eliminar</th>
      </tr>
    </thead>
    <tbody>
      <% @loans.each do |c| %>
        <tr>
          <td><%= c.created_at.in_time_zone('Mexico City').strftime("%F %r") %></td>
          <td><%= link_to c.name.capitalize, edit_loan_path(c) %></td>
          <td><%= link_to 'Editar', edit_loan_path(c), class: 'btn  btn-sm btn-outline-warning' %></td>
          <td><%= link_to 'Eliminar', loan_path(c, filter: params[:filter]), class: 'btn btn-sm btn-outline-danger', method: :delete, data: { confirm: 'Estás seguro?' }  %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<script>
  $(document).ready(function() {
    $("#dttb").dataTable({
        dom: 'Bfrtip',
        order: [[ 0, "desc" ]],
        buttons: [
            'copy', 'csv', 'excel', 'pdf', 'print'
        ],
        "language": {
            "lengthMenu": "Mostrando _MENU_ renglones por página",
            "zeroRecords": "No hay nada - disculpa",
            "info": "Mostrando página _PAGE_ de _PAGES_",
            "infoEmpty": "No hay datos disponibles",
            "infoFiltered": "(filtered from _MAX_ total de renglones)",
            "sSearch": "Buscar:",
            "oPaginate": {
              "sFirst":    "Primero",
              "sPrevious": "Anterior",
              "sNext":     "Siguiente",
              "sLast":     "Último"
            },
            "buttons": {
                "copy": "Copiar",
                "print": "Imprimir"
            }
        }
    });
  });
</script>
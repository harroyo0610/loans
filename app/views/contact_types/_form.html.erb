<br><br>
<% if current_user.can_view_contact_types %>  
  <%= link_to 'Ir al listado', contact_types_path, class: 'btn btn-outline-primary' %>
<% end %>
<div class=" col-md-8 offset-md-2 card">
  <div class="card-body">
    <% if @contact_type.errors.any? %>
      <div id="error_explanation">
        <% @contact_type.errors.full_messages.each do |msg| %>
          <div class="alert alert-danger">
            <%= msg %>
          </div>
        <% end %>
      </div>
    <% end %>
    <br><br>
    <%= form_with model: @contact_type, local: true do |f| %>
      <div class="form-group row">
        <%= f.label 'Nombre:', class: 'col-sm-2 col-form-label font-weight-bold' %>
        <div class="col-sm-10">
          <%= f.text_field :name, class: 'form-control'%>
        </div>
      </div><br>
      <div class="form-group row">
        <%= f.label 'Activo:', class: 'col-sm-2 col-form-label font-weight-bold' %>
        <div class="col-sm-10">
          <%= f.check_box :active, class: 'form-check-input'%>
        </div>
      </div>
      <div class="row col-md-2 offset-md-10">
        <%= f.submit "Guardar", class: 'text-center btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>

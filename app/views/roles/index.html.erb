<br><br><br>
<h1 class="text-center">Roles</h1>
<br><br><br>
<%= link_to 'Nuevo', new_role_path, class: 'btn btn-primary offset-md-10 col-md-2' %>
<br><br>
<table id="dttb" class="table table-hover">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Editar</th>
      <th>Eliminar</th>
    </tr>
  </thead>
  <tbody>
    <% @roles.each do |r| %>
      <tr>
        <td><%= link_to r.name.capitalize, edit_role_path(r) %></td>
        <td><%= link_to 'Editar', edit_role_path(r), class: 'btn  btn-sm btn-outline-warning' %></td>
        <td><%= link_to 'Eliminar', role_path(r), class: 'btn btn-sm btn-outline-danger', method: :delete, data: { confirm: 'EstÃ¡s seguro?' }  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<script>
  $(document).ready(function() {
    $("#dttb").dataTable({
        dom: 'Bfrtip',
        buttons: [
            'copy', 'csv', 'excel', 'pdf', 'print'
        ]
    });
  });
</script>
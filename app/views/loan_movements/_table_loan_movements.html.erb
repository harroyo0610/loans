<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Tipo de movimiento</th>
      <th scope="col">Comentarios</th>
      <th scope="col">Semana</th>
      <th scope="col">Monto</th>
      <th scope="col">Fecha</th>
      <th scope="col">Quitar</th>
    </tr>
  </thead>
  <tbody>
    <% if @client_movements %>
      <% @client_movements.order("week DESC").each do |c| %>
        <tr>
          <th><%= c.movement_type.name %></th>
          <th><%= c.comments %></th>
          <th><%= c&.week %></th>
          <th><%= number_to_currency(c.amount, precision: 2) %></th>
          <th><%= c.updated_at.strftime('%d/%m/%Y') %></th>
          <th>
            <% if current_user.role_can_delete_loan_movements %>  
              <%= link_to 'Eliminar', loan_movement_path(c), class: 'btn btn-sm btn-outline-danger', remote:true, method: :delete, data: { confirm: 'EstÃ¡s seguro?' }  %>
            <% end %>  
          </th>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>



<div class="modal " id="showSaldoModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Saldar Préstamo</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close" id="button_modal_close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <h4 class="text-center">
          Para saldar este préstamo el grupo debe pagar <b><%= "#{number_to_currency(last_weekly_payment, precision: 2)}" %> MXN</b>
        </h4>
          <% if current_user.role_can_edit_loans %>  
            <%= link_to 'Saldar ',pay_full_loan_path({ id: loan.id }), method: :put, data: { confirm: 'Estás seguro?. Este cambio es irreversible' }, class: 'btn btn-outline-danger col-md-2' %>
          <% end %>
        <button type="button" class="btn btn-outline-primary" data-dismiss="modal">Cerrar</button>
      </div>
    </div>
  </div>
</div>

<br><br>
<%= link_to 'Ir al listado', users_path, class: 'btn btn-outline-primary' %>
<div class=" col-md-8 offset-md-2 card">
  <div class="card-body">
    <% if @user.errors.any? %>
      <div id="error_explanation">
        <% @user.errors.full_messages.each do |msg| %>
          <div class="alert alert-danger">
            <%= msg %>
          </div>
        <% end %>
      </div>
    <% end %>
    <br><br>
    <%= form_with model: @user, local: true do |f| %>
      <div class="form-group row">
        <%= f.label 'Usuario:', class: 'col-sm-2 col-form-label font-weight-bold' %>
        <div class="col-sm-10">
          <%= f.text_field :username, class: 'form-control'%>
        </div>
      </div><br>


      <div class="form-group row">
        <%= f.label 'Contraseña:', class: 'col-sm-2 col-form-label font-weight-bold' %>
        <div class="col-sm-10">
          <%= f.password_field :password, autocomplete: "new-password", class: 'form-control'%>
        </div>
      </div><br>

      <div class="form-group row">
        <%= f.label 'Confirmar contraseña', class: 'col-sm-2 col-form-label font-weight-bold' %>
        <div class="col-sm-10">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control'%>
        </div>
      </div><br>

      <div class="form-group row">
        <%= f.label 'Nombre:', class: 'col-sm-2 col-form-label font-weight-bold' %>
        <div class="col-sm-10">
          <%= f.text_field :name, class: 'form-control'%>
        </div>
      </div><br>

      <div class="form-group row">
        <%= f.label 'Apellido:', class: 'col-sm-2 col-form-label font-weight-bold' %>
        <div class="col-sm-10">
          <%= f.text_field :last_name, class: 'form-control'%>
        </div>
      </div><br>

      <div class="form-group row">
        <%= f.label 'Correo electrónico:', class: 'col-sm-2 col-form-label font-weight-bold' %>
        <div class="col-sm-10">
          <%= f.text_field :mail, class: 'form-control'%>
        </div>
      </div><br>

      <div class="form-group row">
        <%= f.label 'Activo:', class: 'col-sm-2 col-form-label font-weight-bold' %>
        <div class="col-sm-10">
          <%= f.check_box :active, class: 'form-check-input'%>
        </div>
      </div><br>

      <div class="form-group row">
        <%= f.label 'Role:', class: 'col-sm-2 col-form-label font-weight-bold' %>
        <div class="col-sm-10">
          <%= f.select :role_id, options_for_select(Role.all.map{|c| [c.name.capitalize, c.id]}), class: 'custom-select' %>
        </div>
      </div><br>

      <div class="row col-md-2 offset-md-10">
        <%= f.submit "Guardar", class: 'text-center btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>

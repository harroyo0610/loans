<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Nombre</th>
      <th scope="col">Paterno</th>
      <th scope="col">Materno</th>
      <th scope="col">Préstamo</th>
      <th scope="col">Expediente</th>
      <th scope="col">Eliminar</th>
    </tr>
  </thead>
  <tbody>
    <% unless clients.nil? %>
      <% clients.each do |c| %>
        <% loan_client = c.loan_clients.find_by(loan_id: loan.id) %>
        <tr>
          <th><%= c.name.capitalize %></th>
          <th><%= c.last_name.capitalize %></th>
          <th><%= c.mother_last_name.capitalize%></th>
          <th><%= number_to_currency(loan_client.amount, precision: 2) %></th>
          <td><%= link_to 'Expediente', edit_client_path(c), class: 'btn  btn-sm btn-outline-warning' %></td>
          <th><%= link_to 'Quitar', loan_client_path(loan_client), remote: true, class: 'btn btn-outline-danger', method: :delete, data: { confirm: 'Estás seguro?' } %></th>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

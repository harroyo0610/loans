<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Nombre</th>
      <th scope="col">Paterno</th>
      <th scope="col">Materno</th>
      <th scope="col">Préstamo</th>
    </tr>
  </thead>
  <tbody>
    <% unless clients.nil? %><div class="modal fade" id="editMovementModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Monto de Préstramo</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close" id="button_modal_close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= form_with(model: @loan_movement, method: :patch, remote: true, id: 'update_loan_movement_form') do |f| %>
          <div class="form-group row">
            <%= f.label 'Tipo de movimiento:', class: 'col-sm-2 col-form-label font-weight-bold' %>
            <div class="col-sm-10">
              <%= f.select :movement_type_id, options_for_select(MovementType.all[1..-1].map{|c| [c.name.capitalize, c.id]}), class: 'custom-select' %>
            </div>
          </div><br>
          <div class="form-group row">
            <%= f.label 'Monto:', class: 'col-sm-2 col-form-label font-weight-bold' %>
            <div class="col-sm-10">
              <%= f.text_field :amount,  class: 'form-control' %>
            </div>
          </div><br>
          <%= f.hidden_field :loan_id %>
          <div class="row col-md-2 offset-md-10">
            <%= f.submit('Guardar', class: 'text-center btn btn-success') %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

      <% clients.each do |c| %>
        <% loan_client = c.loan_clients.find_by(loan_id: loan.id) %>
        <tr>
          <th><%= c.name %></th>
          <th><%= c.last_name %></th>
          <th><%= c.mother_last_name %></th>
          <th><%= number_to_currency(loan_client.amount, precision: 2) %></th>
          <th><%= number_to_currency(loan_client.amount, precision: 2) %></th>
          <td><%= link_to 'Expediente', edit_client_path(c), class: 'btn  btn-sm btn-outline-warning' %></td>
          <th><%= link_to 'Quitar', loan_client_path(loan_client), remote: true, class: 'btn btn-danger', method: :delete, data: { confirm: 'Estás seguro?' } %></th>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
<div class="container">
  <br><br><hr><br><br>
  <table id="dttb"  class="table table-hover table-sm">
    <thead>
      <tr>
        <th scope="col">Semana</th>
        <th scope="col">Fecha Pago</th>
        <th scope="col">Pago capital</th>
        <th scope="col">Pago interes</th>
        <th scope="col">Pago semanal</th>
        <th scope="col">Saldo capital</th>
        <th scope="col">Saldo interes</th>
        <th scope="col">Cartera vigente</th>
        <th scope="col">Ajustar</th>
      </tr>
    </thead>
    <tbody>
      <% unless weekly_payments.nil? %>
        <% weekly_payments.each do |payment| %>
          <% loan_movement = LoanMovement.where(loan_id: payment.loan_id).where(movement_type_id: 2).where(week: payment.week).last %>
          <% week_payment = payment.payment_date > 1.week.ago && loan_movement&.amount <= 0 ? payment.week_payment : loan_movement&.amount %>
          <% week_payment_amount = loan_movement&.amount <= 0 ? payment.week_payment : loan_movement&.amount %>


          <tr class="table-<%= if loan_movement.nil? || week_payment.nil? then 'light' elsif @loan.state_id == 3 then 'success' elsif payment.payment_date >= DateTime.now then 'light' elsif week_payment < @loan.weekly_amount && payment.payment_date < 1.week.ago then 'danger' elsif week_payment < @loan.weekly_amount || (payment.payment_date > 1.week.ago)   then 'warning' elsif week_payment == @loan.weekly_amount  then 'success' else 'light' end %>">
            <th><%= payment.week %></th>
            <th><%= payment.payment_date.strftime('%d/%m/%Y') %></th>
            <th><%= number_to_currency(payment.payment_capital, precision: 2) %></th>
            <th><%= number_to_currency(payment.payment_interest, precision: 2) %></th>
            <th><%= number_to_currency(week_payment_amount, precision: 2) %></th>
            <th><%= number_to_currency(payment.balance_capital, precision: 2) %></th>
            <th><%= number_to_currency(payment.balance_interest, precision: 2) %></th>
            <th><%= number_to_currency(payment.wallet_amout, precision: 2) %></th>
            <th>
              <% if payment.payment_date < DateTime.now && @loan.state_id < 3 %>
                <button 
                  type="button"
                  class="btn btn-warning btn-sm"
                  id="add_client_button"
                  data-toggle="modal"
                  data-target="#editMovementModal"
                  data-amount="<%= week_payment_amount %>"
                  data-id="<%= loan_movement&.id %>"
                >
                  Ajustar
                </button>
              <% end %>
            </th>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>

<%= render partial: 'loan_movements/modal_update_loan_movement', locals: { loan: @loan, loan_movement: @loan_movement } %>

<script>
    $(document).ready(function() {
    $("#dttb").dataTable({
        dom: 'Bfrtip',
        order: [[ 0, "asc" ]],
        paging: false,
        bInfo: false,
        buttons: [
            'copy', 'csv', 'excel', 'pdf', 'print'
        ],
        "language": {
            "lengthMenu": "Mostrando _MENU_ renglones por página",
            "zeroRecords": "No hay nada - disculpa",
            "info": "Mostrando página _PAGE_ de _PAGES_",
            "infoEmpty": "No hay datos disponibles",
            "infoFiltered": "(filtered from _MAX_ total de renglones)",
            "sSearch": "Buscar:",
            "oPaginate": {
              "sFirst":    "Primero",
              "sPrevious": "Anterior",
              "sNext":     "Siguiente",
              "sLast":     "Último"
            },
            "buttons": {
                "copy": "Copiar",
                "print": "Imprimir"
            }
        }
    });
  });

</script>



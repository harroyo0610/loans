<div class="container">
<br><br><br>
  <h1 class="text-center">Clientes y sus grupos</h1>
  <br><br>
  <table id="dttb" class="table table-hover table-sm w-100">
    <thead>
      <tr>
        <th>#</th>
        <th>Nombre Completo</th>
        <th>Fecha nacimiento</th>
        <th>Grupos</th>
      </tr>
    </thead>
    <tbody>
      <% @clients.each_with_index do |c, i| %>
        <tr>
          <td>
            <%= i + 1 %>
          </td>
          <td>
            <%= link_to edit_client_path(c), class: 'nav-link' do %>
              <%= c[:full_name] %>
            <% end %>
          </td>
          <td>
            <%= c[:birth_date]&.strftime("%F") %>
          </td>
          <td>
            <%= c[:groups] %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<style>
  #dttb span {
    display:none; 
}

</style>

<script>
  $(document).ready(function() {
    $("#dttb").dataTable({
        dom: 'Bfrtip',
        paging: false,
        order: [[ 0, "asc" ]],
        buttons: [
            'copy', 'csv', 'excel', 'pdf', 'print'
        ],
        "language": {
            "lengthMenu": "Mostrando _MENU_ renglones por página",
            "zeroRecords": "No hay nada - disculpa",
            "info": "",
            "infoEmpty": "No hay datos disponibles",
            "infoFiltered": "(filtered from _MAX_ total de renglones)",
            "sSearch": "Buscar:",
            "oPaginate": {
              "sFirst":    "Primero",
              "sPrevious": "Anterior",
              "sNext":     "Siguiente",
              "sLast":     "Último"
            },
            "buttons": {
                "copy": "Copiar",
                "print": "Imprimir"
            }
        }
    });
  });
</script>
<br><br>
<%= link_to 'Ir al listado', contracts_path, class: 'btn btn-outline-primary' %>
<div class=" col-md-8 offset-md-2 card">
  <div class="card-body">
    <% if @contract.errors.any? %>
      <div id="error_explanation">
        <% @contract.errors.full_messages.each do |msg| %>
          <div class="alert alert-danger">
            <%= msg %>
          </div>
        <% end %>
      </div>
    <% end %>
    <br><br>
    <%= form_with model: @contract, local: true do |f| %>
      <div class="form-group row">
        <%= f.label 'Nombre:', class: 'col-sm-2 col-form-label font-weight-bold' %>
        <div class="col-sm-10">
          <%= f.text_field :name, class: 'form-control'%>
        </div>
      </div><br><br>
      <div class="form-group row">
        <%= f.label 'Contenido:', class: 'col-sm-2 col-form-label font-weight-bold' %>
        <div class="col-sm-10">
          <%= f.text_area :content_text, rows: 5, cols: 25, :class => "tinymce" %>
          <%= tinymce %>
        </div>
      </div>
      <div class="row col-md-2 offset-md-10">
        <%= f.submit "Guardar", class: 'text-center btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>
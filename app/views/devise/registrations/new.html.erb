<br><br>
<h2 class='text-center'>Crear usuario</h2>
<div class=" col-md-8 offset-md-2 card">
  <div class="card-body">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group row">
        <%= f.label 'Usuario:', class: 'col-sm-2 col-form-label font-weight-bold' %>
        <div class="col-sm-10">
          <%= f.text_field :username, class: 'form-control'%>
        </div>
      </div><br>

      <div class="form-group row">
        <%= f.label 'Contraseña:', class: 'col-sm-2 col-form-label font-weight-bold' %>
        <div class="col-sm-10">
          <%= f.password_field :password, autocomplete: "new-password", class: 'form-control'%>
        </div>
      </div><br>

      <div class="form-group row">
        <%= f.label 'Confirmar contraseña', class: 'col-sm-2 col-form-label font-weight-bold' %>
        <div class="col-sm-10">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control'%>
        </div>
      </div><br>

      <div class="form-group row">
        <%= f.label 'Nombre:', class: 'col-sm-2 col-form-label font-weight-bold' %>
        <div class="col-sm-10">
          <%= f.text_field :name, class: 'form-control'%>
        </div>
      </div><br>
      <div class="form-group row">
        <%= f.label 'Apellido:', class: 'col-sm-2 col-form-label font-weight-bold' %>
        <div class="col-sm-10">
          <%= f.text_field :last_name, class: 'form-control'%>
        </div>
      </div><br>
      <div class="form-group row">
        <%= f.label 'Correo electrónico:', class: 'col-sm-2 col-form-label font-weight-bold' %>
        <div class="col-sm-10">
          <%= f.email_field :mail, class: 'form-control'%>
        </div>
      </div><br>
      <div class="form-group row">
        <%= f.label 'Activo:', class: 'col-sm-2 col-form-label font-weight-bold' %>
        <div class="col-sm-10">
          <%= f.check_box :active, class: 'form-check-input'%>
        </div>
      </div><br>
      <div class="form-group row">
        <%= f.label 'Rol:', class: 'col-sm-2 col-form-label font-weight-bold' %>
        <div class="col-sm-10">
          <% roles_array = Role.all.map { |rol| [rol.name, rol.id] } %>
          <%= f.select :role_id, options_for_select(roles_array), class: 'custom-select' %>
        </div>
      </div><br>

      <div class="actions">
        <%= f.submit 'Guardar ususario', class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>